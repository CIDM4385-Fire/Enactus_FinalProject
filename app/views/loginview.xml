<Alloy>
	<!--Cant see this View because the views are above this window-->
	<Window id='login' class="container">
		
		<ScrollView>
			<ImageView id="image" image="/Enactus.jpg"> </ImageView>
			<!-- loginView -->
			<View id='loginView'>
				<Label id='loginText'></Label>
				<View id="lvContainer" >
					<TextField id="email" hintText="email" class='tfWrapper' />
					<TextField id="password" hintText="password" class='tfWrapper' />
					<View class="centerHelper">
						<Button id="doLoginBtn" title="Login" />
						<Button id="cancelLoginBtn" title="Cancel" />
					</View>
					<!--<Require type="widget" src="SlidingMenu" id="drawermenu"/>-->
				</View>
			</View>
		</ScrollView>
	</Window>
